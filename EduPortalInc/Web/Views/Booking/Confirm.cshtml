@model Domain.Entities.Booking
<h1>Подтверждение бронирования</h1>
<div>
    <h3>Курс: @Model.Courses.Title</h3>
    <p>Дата бронирования: @Model.BookingDate.ToString("d")</p>
    <form asp-action="Confirm" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" name="action" value="Confirm" class="btn btn-success">Подтвердить</button>
        <button type="submit" name="action" value="Cancel" class="btn btn-secondary">Редактировать</button>
    </form>
</div>