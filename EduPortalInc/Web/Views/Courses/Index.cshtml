@model IEnumerable<Domain.Entities.Courses>
<h1>Курсы</h1>
@if (User.Identity?.IsAuthenticated == true)
{
    <p>Добро пожаловать, @User.Identity.Name!</p>
}
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Category</td>
                    <td>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Booking" asp-action="Create" asp-route-coursesId="@course.Id" class="btn btn-primary">Забронировать</a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Создать курс</a>